{
  "openapi": "3.0.1",
  "info": {
    "title": "API commentaire de l'association",
    "contact": {
      "name": "hanane",
      "email": "hananeerraji789@hotmail.com"
    },
    "version": "v1.0"
  },
  "servers": [
    {
      "url": "http://localhost:5000"
    }
  ],
  "paths": {
    "/commentaire": {
      "post": {
        "tags": [
          "commentaires"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/commentaire"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "commentaire ajouté avec succès"
          },
          "400": {
            "description": "requete invalide"
          }
        }
      }
    },
    "/commentaire/{id}": {
      "get": {
        "tags": [
          "commentaires"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "retourne un tableau de commentaires spécifiés par l'id de l'evenement",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/commentaire"
                  }
                }
              }
            }
          },
          "400": {
            "description": "requete invalide"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "commentaire": {
        "type": "object",
        "properties": {
          "id_event": {
            "type": "integer",
            "description": "l'id de l'evenement concerné par le commentaire"
          },
          "email_membre": {
            "type": "string",
            "description": "le mail de l'auteur du commentaire"
          },
          "contenu": {
            "type": "string",
            "description": "le contenu du commentaire"
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "commentaires",
      "description": "commentaires sur les evenements de l'association de l'association"
    }
  ]
}